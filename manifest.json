{
	"manifest_version": 2,
	"name": "MFCAssistant",
	"version": "1.0.5",
	"background": {
		"html": [
			"options/options.html"
		],
		"scripts": [
			"background/background.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"run_at": "document_end",
			"js": [
				"content/content.js"
			],
			"matches": [
				"http://www.myfreecams.com/*",
				"https://www.myfreecams.com/*"
			],
			"all_frames": true
		}
	],
	"browser_action": {
		"default_title": "MFC Assistant"
	},
	"web_accessible_resources": [
		"content/*.js"
	],
	
	"permissions": [
		"tabs",
		"activeTab"
	]
}
