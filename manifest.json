{
	"manifest_version": 2,
	"name": "MFCAssistant",
	"version": "1.0.10",
	"background": {
		"html": [ "options/options.html" ],
		"persistent": true,
		"scripts": [ "background/background.js" ]
	},
	"browser_action": {
		"default_title": "MFC Assistant"
	},
	"content_scripts": [{
		"js": [ "content/jquery.js", "content/mfc-assistant.js" ],
		"matches": [ "*://www.myfreecams.com/modelweb/*" ]
	}],
	"icons": {
		"16": "options/images/icon16.png",
		"48": "options/images/icon48.png",
		"128": "options/images/icon128.png"
	},
	"permissions": [ "tabs", "activeTab" ]
}